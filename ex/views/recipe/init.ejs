<h2>Ex.Models.Recipes</h2>
<table cellspacing='0px'>
    <thead>
    <tr>
        <% for(var attr in Ex.Models.Recipe.attributes){%>
	        <% if(attr == 'id') continue;%>
	        <th><%= attr%> </th>    
        <%}%>
        <th>Options</th>
    </tr>
    </thead>
    <tbody>
        <%= view('views/recipe/list',{recipes: recipes})%>
    </tbody>
</table>
<h2>New Ex.Models.Recipe</h2>
<form>
    <% for(var attr in Ex.Models.Recipe.attributes){ %>
        <% if(attr == 'id') continue;%>
        <div>
            <label><%= attr %> </label><br />
            <input type="text" value="" name="<%= attr %>"/>
        </div>
    <%}%>
    <input type='submit' value='Create'/>
</form>