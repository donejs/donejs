<html>
  <head>
    <title>{{title}}</title>
    <meta name="viewport" content="minimal-ui, width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  </head>
  <body>
    <can-import from="place-my-order-assets" />
    <can-import from="~/styles.less" />
    <can-import from="~/app" export-as="viewModel" />

    <can-import from="~/loading.component" />
    <can-import from="~/header.component" />
    <pmo-header page:from="page"/>

    {{#switch page}}
      {{#case "home"}}
        <can-import from="~/home.component"
            can-tag="pmo-loading">
          <pmo-home/>
        </can-import>
      {{/case}}
      {{#case "restaurants"}}
        <can-import from="~/restaurant/list/"
            can-tag="pmo-loading">
          <pmo-restaurant-list/>
        </can-import>
      {{/case}}
      {{#case "order-history"}}
        <can-import from="~/order/history.component"
            can-tag="pmo-loading">
          <pmo-order-history/>
        </can-import>
      {{/case}}
    {{/switch}}

    {{#switch env.NODE_ENV}}
      {{#case "production"}}
        <script
          src="{{joinBase('steal.production.js')}}">
        </script>
      {{/case}}
      {{#default}}
        <script src="/node_modules/steal/steal.js"></script>
      {{/default}}
    {{/switch}}
  </body>
</html>
